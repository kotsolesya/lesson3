<p id="notice"><%= notice %></p>
<h2 class="todo_list_title">Show ToDo</h2>

<p>
  <strong>Title:</strong>
  <%= @task.title %>
</p>

<p>
  <strong>Priority:</strong>
  <%= @task.priority %>
</p>

<p>
  <strong>Status:</strong>
  <%= @task.status %>
</p>

<div class="links">
  <%= link_to 'Edit', edit_task_path(@task) %> |
  <%= link_to 'Delete', tasks_path(@task), method: :delete, data: {confirm: "Are you sure?"}%> |
  <%= link_to 'Back', tasks_path %>
</div>
